extends layout 

block content 

    h1= title 

    form(method = 'POST' action = '')
        div.form-group 
            label(for="item_name") Item Name: 
            input#item_name.form-control(type='text', placeholder="Name of Tea Variety" name='item_name' required='true' value=(undefined===item ? '' : item.item_name))
        div.form-group 
            label(for="item_description") Item Description: 
            input#item_description.form-control(type='text', placeholder='Item Description' name='item_description' required='true' value=(undefined===item ? '' : item.item_description))
        div.form-group 
            label(for='category_name') Tea Category: 
            select#category_name.form-control(type='select', placeholder='Select Tea Category' name='category_name' required='true')
                option(value=category_name) #{category_name}
        div.form-group 
            label(for="item_price") Item Price: 
            input#item_price.form-control(type='text', placeholder="Price of Item" name='item_price' required='true' value=(undefined===item ? '' : item.item_price))
        div.form-group 
            label(for="number_in_stock") Number In Stock: 
            input#number_in_stock.form-control(type='text', placeholder="Number In Stock" name='number_in_stock' required='true' value=(undefined===item ? '' : item.number_in_stock))
        
        button.btn.btn-primary(type='submit') Submit

    if errors 
        ul  
            for error in errors 
                li!=error.msg    


            