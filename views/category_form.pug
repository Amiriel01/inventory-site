extend layout 

block content 

    h1 #{title}

    form(method='POST' action='')
        div.form-group 
            label(for='category_name') Category: 
            input#category_name.form-control(type='text', placeholder='New Category Name' category_name='category_name' value=(undefined === category ? '' : category.category_name))
        button.btn.btn-primary(type='submit') Submit 

    if errors 
        ul 
            for error in errors 
                li!=error.msg 